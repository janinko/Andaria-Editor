<?xml version="1.0" encoding="UTF-8"?>

<?import eu.janinko.andaria.editor.regions.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox prefWidth="1200.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eu.janinko.andaria.editor.regions.RegionsCTL">
    <children>
        <VBox HBox.hgrow="ALWAYS">
            <children>
                <HBox prefHeight="0.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#zoomIn" text="+">
                            <HBox.margin>
                                <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                            </HBox.margin>
                        </Button>
                        <Label fx:id="zoomLabel" alignment="CENTER" minWidth="35.0" prefHeight="26.0" text="1x" textAlignment="CENTER">
                            <HBox.margin>
                                <Insets bottom="2.0" left="10.0" right="10.0" top="2.0" />
                            </HBox.margin>
                        </Label>
                        <Button mnemonicParsing="false" onAction="#zoomOut" text="-">
                            <HBox.margin>
                                <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                            </HBox.margin>
                        </Button>
                  <Separator visible="false" HBox.hgrow="ALWAYS" />
                  <Label fx:id="positionLabel" alignment="CENTER_RIGHT" minWidth="80.0" prefHeight="26.0" text="0,0">
                     <HBox.margin>
                        <Insets bottom="2.0" left="2.0" right="10.0" top="2.0" />
                     </HBox.margin>
                  </Label>
                    </children>
                </HBox>
                <Pane fx:id="canvasPane" VBox.vgrow="ALWAYS">
                    <children>
                        <Canvas fx:id="mapCanvas" height="50.0" onMouseClicked="#mapClick" width="50.0" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                    </VBox.margin>
                </Pane>
            </children>
        </VBox>
        <VBox HBox.hgrow="SOMETIMES">
            <children>
                <RegionsTreeView fx:id="regionsTree" prefWidth="270.0" VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                    </VBox.margin>
                </RegionsTreeView>
                <HBox VBox.vgrow="NEVER">
                    <children>
                        <Button mnemonicParsing="false" text="Přidat skupinu">
                            <HBox.margin>
                                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                            </HBox.margin>
                        </Button>
                        <Separator visible="false" HBox.hgrow="ALWAYS" />
                        <Button mnemonicParsing="false" text="Přidat">
                            <HBox.margin>
                                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
        <fx:include fx:id="editBox" source="EditBox.fxml" />
    </children>
</HBox>
