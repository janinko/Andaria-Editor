<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane headerText="Vyber místo." xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <content>
        <GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="497.0">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="10.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints halignment="CENTER" hgrow="NEVER" minWidth="10.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
            </rowConstraints>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Label fx:id="pathLabel" text="Složka">
                <GridPane.margin>
                    <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                </GridPane.margin>
            </Label>
            <Button mnemonicParsing="false" onAction="#selectDirectory" text="Vybrat" GridPane.columnIndex="2">
                <GridPane.margin>
                    <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                </GridPane.margin>
            </Button>
            <TextField fx:id="pathField" GridPane.columnIndex="1">
                <GridPane.margin>
                    <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                </GridPane.margin>
            </TextField>
        </GridPane>
    </content>
    <ButtonType fx:id="saveButton" buttonData="OK_DONE" text="Potvrdit" />
    <ButtonType buttonData="CANCEL_CLOSE" text="Zrušit" />
</DialogPane>
